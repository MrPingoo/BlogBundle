{% extends '@JlayBlogBundle/Resources/views/backend.html.twig' %}

{% block body -%}
    <h1>Post creation</h1>

    {# {{ form(form) }} #}

    {# {{  dump() }} #}

    <div class="row">
        <div class="col-lg-12">

            {{ form_start(form, {'attr':{'role':'form'}}) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.hidden) }}
                    {{ form_errors(form.hidden) }}
                    {{ form_widget(form.hidden) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.deleted) }}
                    {{ form_errors(form.deleted) }}
                    {{ form_widget(form.deleted) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.crdate) }}
                    {{ form_errors(form.crdate) }}
                    {{ form_widget(form.crdate) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.path) }}
                    {{ form_errors(form.path) }}
                    {{ form_widget(form.path, {'attr':{'class':'form-control','placeholder':'Path du post ...'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title, {'attr':{'class':'form-control','placeholder':'Titre du post ...'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.author) }}
                    {{ form_errors(form.author) }}
                    {{ form_widget(form.author, {'attr':{'class':'form-control','placeholder':'Auteur du post ...','value':'Julian Layen'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.bodytext) }}
                    {{ form_errors(form.bodytext) }}
                    {{ form_widget(form.bodytext, {'attr':{'class':'form-control','placeholder':'Detail du post ...','value':''}}) }}
                </div>

                {{ form_widget(form.submit, {'attr':{'class':'btn btn-lg btn-success'}}) }}
                <button type="reset" class="btn btn-warning btn-lg">Vider</button>

            {{ form_end(form) }}
            
            <a href="{{ path('post') }}" class="btn btn-primary btn-lg active pull-right" role="button">Retour Ã  la liste</a>

        </div>

    </div>


{% endblock %}
