{% extends '@JlayBlogBundle/Resources/views/backend.html.twig' %}

{% block body -%}
    <h1>Post creation</h1>

    {# {{ form(form) }} #}

    {{  dump() }}

    <div class="row">
        <div class="col-lg-12">

            {{ form_start(form, {'attr':{'role':'form'}}) }}
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.path) }}
                    {{ form_errors(form.path) }}
                    {{ form_widget(form.path, {'attr':{'class':'form-control','placeholder':'Path du post ...'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title, {'attr':{'class':'form-control','placeholder':'Titre du post ...'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.author) }}
                    {{ form_errors(form.author) }}
                    {{ form_widget(form.author, {'attr':{'class':'form-control','placeholder':'Auteur du post ...','value':'Julian Layen'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.bodytext) }}
                    {{ form_errors(form.bodytext) }}
                    {{ form_widget(form.bodytext, {'attr':{'class':'form-control','placeholder':'Detail du post ...','value':'Julian Layen'}}) }}
                </div>

                <button type="submit" class="btn btn-default">Submit Button</button>
                <button type="reset" class="btn btn-default">Reset Button</button>

            {{ form_end(form) }}

        </div>
    </div>



        <ul class="record_actions">
    <li>
        <a href="{{ path('post') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
