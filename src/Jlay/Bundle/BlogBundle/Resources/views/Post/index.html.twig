{% extends '@JlayBlogBundle/Resources/views/backend.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Liste des posts
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="{{ path('jlay_blog_backend_index') }}">Dashboard</a>
                </li>
                <li class="active">
                    <i class="fa fa-folder"></i> Liste des posts
                </li>
                <li>
                    <a href="{{ path('post_new') }}" class="float-left"><i class="fa fa-plus"></i> Créer un nouveau post</a>
                </li>
            </ol>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                {% for entity in entities %}
                    <div class="post-preview">
                        <a href="{{ path('post_show', { 'id': entity.id }) }}">
                            <h2 class="post-title">
                                {{ entity.title }}
                            </h2>
                        </a>
                        <p class="post-meta"><a href="{{ path('post_edit', { 'id': entity.id }) }}" ><i class="fa fa-edit"></i> Modifier</a></p>
                    </div>
                    <hr>
                {% endfor %}

                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="{{ path('post') }}" >Anciens articles →</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    {% endblock %}
