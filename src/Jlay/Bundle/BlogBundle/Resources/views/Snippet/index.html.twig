{% extends '@JlayBlogBundle/Resources/views/backend.html.twig' %}

{% block body -%}
    <h1>Snippet list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Hidden</th>
                <th>Deleted</th>
                <th>Crdate</th>
                <th>Title</th>
                <th>Author</th>
                <th>Path</th>
                <th>Bodytext</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('snippet_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.hidden }}</td>
                <td>{{ entity.deleted }}</td>
                <td>{% if entity.crdate %}{{ entity.crdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.bodytext }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('snippet_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('snippet_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('snippet_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
